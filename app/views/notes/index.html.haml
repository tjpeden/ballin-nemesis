.row-fluid.show-grid
  .well.span4
    = link_to new_note_path, class: 'btn btn-primary' do
      %i.icon-plus.icon-white
      Add a Note
    %h3 Notes
    %ul.nav.nav-list#notes
      = render 'side'
  .span8
    %header.hero-unit
      %h1 Preview
    .sub-nav
      %ul.nav.nav-pills
        %li.btn-group
          %button.btn.btn-primary#copy{:data => {:target => '#description'}} Copy
        %li.btn-group
          %button.btn#clear{:data => {:target => '#description'}} Clear
    %pre#description
